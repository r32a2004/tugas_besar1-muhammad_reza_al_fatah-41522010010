                                android:textSize="14sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:text="100 Tutup Botol"
                                android:textColor="#4D4D4D" />

                            <LinearLayout
                                android:layout_width="wrap_content"
